<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Add Health Entry - Gold Health</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1>Gold Health</h1>
        <nav>
            <a href="/">Home</a> |
            <a href="/health/list">View Entries</a> |
            <a href="/health/search">Search Entries</a> |
            <a href="/users/logout">Logout</a>
        </nav>
    </header>

    <main>
        <h2>Add New Health Entry</h2>

        <!-- Display validation errors -->
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <ul class="errors">
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        <% } %>

<form action="/health/add" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= typeof title !== 'undefined' ? title : '' %>" required>

    <label for="details">Details:</label>
    <textarea name="details" id="details" rows="5" required><%= typeof details !== 'undefined' ? details : '' %></textarea>

    <button type="submit">Add Entry</button>
</form>

    </main>

    <footer>
        <p>&copy; 2025 Gold Health</p>
    </footer>
</body>
</html>
